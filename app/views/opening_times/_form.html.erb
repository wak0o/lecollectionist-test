<%= simple_form_for @opening_time, url: shop_opening_times_path do |f| %>
  <%= f.input :week_day, prompt: "Choose a week day", collection: [[1, 'Monday'], [2, 'Tuesday'], [3, 'Wednesday'], [4, 'Thursday'], [5, 'Friday'], [6, 'Saturday'], [0, 'Sunday']], label_method: :second, value_method: :first %>
  <br>
  <%= f.input :open_at %>
  <br>
  <%= f.input :close_at %>
  <br>
  <%= f.button :submit %>
<% end %>